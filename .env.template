# Environment Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path (use absolute or relative path)
# Local development: data/processed/books_data.duckdb
# Cloud deployment: books_data.duckdb or URL
DB_PATH=data/processed/books_data.duckdb

# Database connection timeout (seconds)
DB_TIMEOUT=30

# Enable database connection pooling (true/false)
DB_POOLING=true

# =============================================================================
# APPLICATION CONFIGURATION  
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# Application title (appears in web app)
APP_TITLE=Book Data Explorer

# Maximum search results to display
MAX_SEARCH_RESULTS=100

# Default page size for pagination
DEFAULT_PAGE_SIZE=20

# =============================================================================
# WEB APPLICATION SETTINGS
# =============================================================================

# Streamlit server port (default: 8501)
STREAMLIT_PORT=8501

# Streamlit server host (default: localhost)
STREAMLIT_HOST=localhost

# Enable Streamlit analytics (true/false)
STREAMLIT_GATHER_USAGE_STATS=false

# Streamlit theme primary color
STREAMLIT_PRIMARY_COLOR=#1f77b4

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Enable query result caching (true/false)
ENABLE_CACHING=true

# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600

# Maximum cache size (MB)
MAX_CACHE_SIZE=100

# Enable performance monitoring (true/false)
ENABLE_MONITORING=false

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================

# Cloud platform (streamlit_cloud, railway, render, heroku)
CLOUD_PLATFORM=

# Cloud database URL (for cloud deployments)
CLOUD_DB_URL=

# Enable cloud optimizations (true/false)
CLOUD_OPTIMIZATIONS=false

# =============================================================================
# EXTERNAL INTEGRATIONS (Future Features)
# =============================================================================

# Google Books API Key (for enhanced book data)
GOOGLE_BOOKS_API_KEY=

# Goodreads API Key (for reviews/ratings)
GOODREADS_API_KEY=

# Analytics service key (for usage tracking)
ANALYTICS_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features (true/false)
ENABLE_EXPERIMENTAL=false

# Enable data export features (true/false) 
ENABLE_EXPORT=true

# Enable user favorites (true/false)
ENABLE_FAVORITES=false

# Enable advanced search (true/false)
ENABLE_ADVANCED_SEARCH=true

# Enable price alerts (true/false)
ENABLE_PRICE_ALERTS=false

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console)
LOG_FILE=

# Enable SQL query logging (true/false)
LOG_QUERIES=false

# Enable performance logging (true/false)  
LOG_PERFORMANCE=false